{{#each characters}}
  <div class="card card-body mb-2">
    <h4>{{name}}</h4>
    <p>{{about}}</p>
    <a href="/characters/edit/{{_id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form action="/characters/{{ _id }}?_method=DELETE" method="post">
      <button type="submit" class="btn btn-secondary btn-block">Delete</button>
    </form>
  </div>
{{else}}
  <p>No characters listed</p>
{{/each}}